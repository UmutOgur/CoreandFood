@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<CoreandFood.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category List</h2>
<br />
@using (Html.BeginForm())
{
    <p>Food Name : @Html.TextBox("p")</p>
    <input type="submit" value="Find" />

}
<table class="table w3-table-all w3-hoverable">
    <tr>
        <th style="background-color:aqua">ID</th>
        <th style="background-color:aqua">Category Name</th>
        <th style="background-color:aqua">Category Status</th>
        <th style="background-color:aqua">Delete</th>
        <th style="background-color:aqua">Update</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td>@item.status</td>
            <td><a href="/Category/CategoryDelete/@item.CategoryId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryGet/@item.CategoryId" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<br />
<a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a>

